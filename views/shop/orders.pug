extends ../layouts/main-layout.pug
block content
  main.main_content
    if orders.length > 0
      ul.cart__item
        each order in orders
          li 
            h1 Order IDs: #{order._id}
            p User: #{order.user.name}
            ul
              each product in order.products
                li #{product.product.title} = #{product.quantity}
    else
      h1 No orders here!