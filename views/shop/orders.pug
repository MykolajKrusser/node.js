extends ../layouts/main-layout.pug
block content
  main.main_content
    if orders.length > 0
      ul.cart__item
        each order in orders
          li 
            h1 #{order._id}
            p #{order.user.name}
            ul
              each product in order.item
                li #{product.title} = #{product.quantity}
    else
      h1 No orders here!