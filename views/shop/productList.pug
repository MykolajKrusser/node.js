extends ../layouts/main-layout.pug

block content
  main.main_content
    if prods.length > 0
      each product in prods
        article.product__item
          h1 #{product.title}
          img(src=product.imgUrl, alt=product.title)
          h2 #{product.price}$
          p #{product.description}
          .edit-product-item
            a.gradient-btn.gradient-a( href=`/product/${product._id}` ) Details
            include ../layouts/add-to-cart.pug
    else 
      h1 No products
